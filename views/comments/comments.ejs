<% include ../partials/header %>
    <div class="container">
        <h1 class="text-center">Add new comment - <%= selectedid['name'] %></h1>
        <div class="row" style="width:30%;margin: 0 auto;">
            <form method="POST" action="/campground/<%= selectedid['_id'] %>/comments/add">
                <div class="form-group">
                    <input type="text" class="form-control" name="comment[author]" placeholder="name"></input>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="comment[text]" placeholder="text"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campground/<%= selectedid['_id'] %>">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %> 