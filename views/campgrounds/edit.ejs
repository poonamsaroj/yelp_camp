<% include ../partials/header %>
    <div class="container">
        <h1 class="text-center">Update new campground</h1>
        <div class="row" style="width:30%;margin: 0 auto;">
            <form method="POST" action="/campground/<%= camp.id %>/edit?_method=PUT">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" value="<%= camp.name; %>"></input>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="url"  value="<%= camp.url; %>"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campground">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %> 